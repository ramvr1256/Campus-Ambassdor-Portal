		<!-- MAIN -->
		<div class="main">
			<!-- MAIN CONTENT -->
			<div class="main-content">
				<div class="row container-fluid">
					<div class="prj-filter">
						
					</div>
					<% if(projects.length == 0 ){ %>
						<div class="panel-heading">
							<h1 class="panel-title">No Tasks Offered</h1>
						</div>
					<% }else{ %>
						<% for (var i = 0;i<projects.length;i++) { %>

							<script>
								window.fbAsyncInit = function() {
									FB.init({
										appId            : '442462816705422',
										autoLogAppEvents : true,
										xfbml            : true,
										version          : 'v5.0'
									});
								}
							  </script>
							  <script>
								function oclick<%=i%>(){
									FB.ui({
										method: 'share',
										href: '<%= projects[i].facebook %>',
								   }, function(response){});
								}
							   </script>
							<div class="col-md-6 container-fluid" id="notif-pos" >
								<div class="panel newpanel" style="color: white;">
								  <div class="panel-heading" width="50%">
									<h2><%= projects[i].title %></h2>
								  </div>
								  <div class="panel-body" width="50%">
									<table class="proj-data">
									   <tr style="font-size: x-large;">
										<th>Points</th>
										<td><%=projects[i].points%></td>
									   </tr>
									   <tr>
										<th>Last Date</th>
										<td><%=projects[i].lastDate%></td>
									   </tr>
									</tr>
										<th>Offered on:</th>
										<td>
										  <% function getdate(date){ var months = ["January",
										  "February", "March", "April", "May", "June", "July",
										  "August", "September", "October", "November", "December"];
										  return date.getDate() + '-' + months[date.getMonth()] +
										  '-' + date.getFullYear(); } %> <%=
										  getdate(projects[i].createdAt) %>
										</td>
									  </tr>
									</table>
									<br>
									<p><%= projects[i].description %></p>
							  </div>
						  <div style = "margin-left: 5px;">
								<a href="#" class="fa fa-facebook" onclick = " oclick<%=i%>()"></a>
								<a href="https://wa.me/?text=<%= projects[i].whatsapp %>" class="fa fa-whatsapp" target="_blank"></a>
								<a href="http://twitter.com/share?text=&url=<%=projects[i].twitter%>" class="fa fa-twitter" target="_blank"></a>
						  </div>
							  <div class="panel-body" >
								  <h3>Submit Proof of completion:</h3>
								  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#modal<%=i%>">Upload</button>
								  <br>
								  <div id="modal<%=i%>" class="modal fade" role="dialog">
									<div class="modal-dialog">
								  
									  <!-- Modal content-->
									  <div class="modal-content">
										<div class="modal-header">
										  <button type="button" class="close" data-dismiss="modal">&times;</button>
										  <h4 class="modal-title" style="color: black;">Please follow all rules before uploading.</h4>
										</div>
										<div class="modal-body">
											<form id="new-post" name ="uploadForm" method="post" enctype="multipart/form-data"  action="/request/createrequests/<%= projects[i]._id%>"
												>
												  <label style="color: black;">Please Upload image here(PEG Only) and under 3 MB.
													Rules for verification:<br>
													1. First, make sure to Like and Share the post yourself. The links have been provided below, so make sure you like and share the post.<br>
													2. Upload images(screenshots) of your sharing of posts on social media.<br>
													3. Make sure to share with as many people as possible on Whatsapp too!<br>
													4. Duplicate or false images will be heavily penalized!<br>
													<b>5. *Merge all your screenshots in one JPEG image before uploading.* </b><br>	
													</label>
												  <br><br>
												  <input type="file" id="myFile" name="projectfile" accept="image/jpeg" required style="margin-left: -10px; color: black;"/>
												  <!-- <input type="file" id="myFile" name="projectfile" required style="margin-left: -10px;"/>
												  <input type="file" id="myFile" name="projectfile" required style="margin-left: -10px;"/> -->
												  <br>
												  <br />
												  <div >
													   <button type="submit" class="btn btn-success" style="background-color:white; color:black;">Submit</button>
												  </div>
												</form>
										</div>
										<div class="modal-footer">
										  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
										</div>
									  </div>
								  
									</div>
								  </div>
							  </div>
							</div>
						  </div>
						<% } %>
					<% } %>
