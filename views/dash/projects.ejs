	<script>
		$('[id="myFile"]').bind('change', function() {
			//this.files[0].size gets the size of your file.
			if(this.files[0].size>3000000)
			alert("Please upload again.File size should be less than 3MB");
			});
		</script>
	<script>
		const projectRows = document.querySelectorAll(".prj-row");
		const filter = document.querySelector("#dept-select");
		const tblEmpty = document.querySelector(".tbl-empty");
		filter.addEventListener('change', function(){
			const dept = this.value;
			let nonEmpty = false;
			projectRows.forEach(row => {
				if (dept === 'all' || row.children[2].innerHTML === dept.toUpperCase()) {
					row.style.display = '';
					nonEmpty = true;
				}
				else row.style.display = 'none';
			})
			if (nonEmpty) tblEmpty.style.display = 'none';
			else tblEmpty.style.display = 'block';
		})
	</script>
